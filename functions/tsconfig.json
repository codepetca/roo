{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "lib": ["es2018"],
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noEmit": false,
    "outDir": "./lib",
    "sourceMap": true,
    "strict": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" }
    ]
  },
  "include": [
    "src",
    "shared"
  ],
  "exclude": [
    "node_modules",
    "src/index-original.ts",
    "src/test/**/*.ts"
  ]
}