{
  "name": "functions",
  "scripts": {
    "build": "tsc && node scripts/fix-imports.js",
    "build:watch": "tsc --watch",
    "serve": "firebase emulators:start --only functions",
    "serve:remote": "firebase functions:shell",
    "serve:remote:readonly": "echo '⚠️  Production functions access - use carefully!' && firebase functions:shell",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "test": "vitest run --exclude='**/*.integration.test.ts'",
    "test:unit": "vitest run --exclude='**/*.integration.test.ts'",
    "test:integration": "vitest run src/test/integration/*.integration.test.ts",
    "test:all": "vitest run",
    "test:watch": "vitest --exclude='**/*.integration.test.ts'"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/src/index.js",
  "dependencies": {
    "@getbrevo/brevo": "^2.2.0",
    "@google/generative-ai": "^0.24.1",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "dotenv": "^17.2.1",
    "firebase-functions": "^6.4.0",
    "googleapis": "128.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^5.0.0",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "firebase-admin": "^13.4.0",
    "firebase-functions-test": "^3.4.1",
    "prettier": "^3.2.5",
    "ttypescript": "^1.5.15",
    "typescript": "^5.1.6",
    "typescript-transform-paths": "^3.5.5",
    "vitest": "^3.2.4"
  },
  "private": true
}
